<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="%appdata%/Loginator/nlog.log"
      internalLogLevel="Warn"
      throwExceptions="false">

  <targets>
    <target xsi:type="Debugger" name="debugger" layout="${date:format=HH\:mm\:ss} | ${logger} | ${level} | ${message} | ${exception:format=ToString}"/>

    <target xsi:type="File"
            name="file"
            fileName="${specialfolder:folder=ApplicationData}/Loginator/loginator.log"
            archiveFileName="${specialfolder:folder=ApplicationData}/Loginator/loginator.{##}.log"
            header="************************************************ Loginator ${processid} ************************************************"
            writeHeaderWhenInitialFileNotEmpty="true"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss\:fff} | ${level:padding=-5} | ${threadid:padding=2} | ${logger} | ${message} | ${exception:format=ToString}"
            openFileCacheSize="20"
            archiveAboveSize="1048576"
            maxArchiveFiles="10"
            archiveNumbering="Sequence"
            keepFileOpen="true" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="debugger" />
    <logger name="*" minlevel="Trace" writeTo="file" />
  </rules>
</nlog>
